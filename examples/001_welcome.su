// ðŸŽ¯ Funbit brings Erlang's powerful bit syntax to Go!
// Let's parse real binary protocols with ease

lua.print("=== Welcome to Funbit Demo ===")
lua.print("True bit-level operations, not just byte arrays!")
lua.print("")

// Traditional approach - painful byte manipulation
lua.old_way = [0x12, 0x34, 0x56, 0x78]
lua.high_byte = lua.old_way[0]
lua.low_byte = lua.old_way[1]
lua.value = lua.high_byte * 256 + lua.low_byte
lua.print("Old way - manual parsing:", lua.value)

// Funbit way - elegant and clear!
lua.data = <<0x1234:16, 0x5678:16>>
match lua.data {
    <<value1:16, value2:16>> -> {
        lua.print("Funbit way - pattern matching:", value1, value2)
    }
}
